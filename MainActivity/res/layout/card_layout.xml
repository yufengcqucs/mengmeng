<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res/com.stone.card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#cd4827"
        android:orientation="vertical" >

        <Button
            android:id="@+id/mainpage_setting_btn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_btn_back"
            android:paddingLeft="10dp"
            android:text="@string/setting_btn"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>
 
    <com.stone.card.CardSlidePanel
        android:id="@+id/image_slide_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card:bottomMarginTop="10dp"
        card:itemMarginTop="0dp"
        card:yOffsetStep="0dp">

        <LinearLayout
            android:id="@+id/card_bottom_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            
            <!-- 
            <Button
                android:id="@+id/callmessage_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/home_button" />

            <Button
                android:id="@+id/sendflower_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/like_button" />
             -->    
             
             <Button
                android:id="@+id/callmessage_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_shape"
                android:text="@string/mainpage_sendmessage_btn"
                android:textColor="@drawable/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/sendflower_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_shape"
                android:text="@string/mainpage_sendflower_btn"
                android:textColor="@drawable/white"
                android:textSize="18sp" />
        </LinearLayout>

        <com.stone.card.CardItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.stone.card.CardItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.stone.card.CardItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.stone.card.CardItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.stone.card.CardSlidePanel>

</LinearLayout>